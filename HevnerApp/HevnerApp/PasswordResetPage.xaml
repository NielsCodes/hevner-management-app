<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HevnerApp.PasswordResetPage">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            Margin="25">
            
            <Label 
                Text="Vul je e-mailadres in. Je zult een link ontvangen om je wachtwoord te resetten."
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" 
                Margin="0,0,0,20"/>
            
            <Label Text="Email"></Label>
            <Entry
                x:Name="ResetPasswordEmailEntry"
                Placeholder="naam@zuyd.nl"
                Keyboard="Email"/>
            
            <Button
                Margin="0,40,0,0"
                Text="Reset wachtwoord"
                x:Name="ResetPasswordButton"
                Clicked="ResetPasswordButton_OnClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>