<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HevnerApp.TasksPage">
    
    <ContentPage.ToolbarItems>
        
        <!-- Secondary order to appear as context menu -->
        <ToolbarItem 
            Text="Taak toevoegen" 
            Order="Secondary"
            x:Name="AddProjectToolbarItem"
            Clicked="AddTaskToolbarItem_OnClicked"/>
        
        <ToolbarItem 
            Text="Notities" 
            Order="Secondary"
            x:Name="ShowCompletedProjectsToolbarItem"
            Clicked="ShowNotesToolbarItem_OnClicked"/>
        
        <ToolbarItem 
            Text="Help" 
            Order="Secondary"
            x:Name="ShowHelpToolbarItem"
            Clicked="ShowHelpToolbarItem_OnClicked"/>
        
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>

            
        <ListView x:Name="TaskListView" ItemTapped="TaskListView_OnItemTapped">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell 
                        Text="{Binding Name}" 
                        Detail="{Binding Description}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
            

    </ContentPage.Content>
    
</ContentPage>